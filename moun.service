[Unit]
Description=Montaggio automatico Samba
After=network.target

[Service]
ExecStart=/bin/bash /home/amministratore/Scaricati/auto_mount.sh  amministrazione ludovico 192.168.128.179
Restart=no                     # Non riavviare mai il servizio
Type=oneshot                   # Esegui solo una volta e termina
User=root
Group=root
WorkingDirectory=/mnt/samba

[Install]
